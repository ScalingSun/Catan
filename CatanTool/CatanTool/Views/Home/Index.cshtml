@model CatanTool.Models.Playboard

@{
    ViewData["Title"] = "Home Page";

}

<div id="CatantoolHolder">
    <div id="ImageHolder">
        <img id="PlayboardImage" height="1000" width="1000" src=@Model.Data>
    </div>

    <div id="TopJunctions">
        <ol>
            @foreach (var junction in Model.TopJunctions)
            {
                <li>
                    @junction.ToString();
                </li>
            }
        </ol>
    </div>
</div>
<br />

<input id="Download" class="btn btn-secondary" type="button" value="Download image" onclick="saveData('CatanMap', '@Model.Data');" />
<input id="Export" class="btn btn-secondary" type="button" value="Export layout" onclick="exportData('@ViewBag.ExportJsonString');" />

    <form method="post" asp-controller="Home" asp-action="ImportData" asp-antiforgery="true" enctype="multipart/form-data">
        <div class="form-group">
            <div class="col-md-4">
                <input type="file" name="SubmitterPicture" id="SubmitterPicture" />
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-default" value="Import layout" />
                </div>
            </div>
        </div>
    </form>



